{
  "name": "@mdxui/shared",
  "version": "0.1.0",
  "description": "Shared components, layouts, and utilities for MDXUI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --treeshake --splitting --target=esnext --external=react --external=next",
    "dev": "tsup src/index.ts --format esm --dts --watch --target=esnext --external=react --external=next",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts*"
  },
  "keywords": [
    "mdx",
    "react",
    "components",
    "layouts",
    "utilities"
  ],
  "dependencies": {
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@mdxui/typescript-config": "workspace:*",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
