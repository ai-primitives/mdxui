{
  "name": "@mdxui/widgets",
  "version": "0.1.0",
  "description": "Interactive components for MDXUI including Chat, Editor, SearchBox, CommandBar, and SearchList",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --treeshake --splitting --target=esnext --external=react --external=next",
    "dev": "tsup src/index.ts --format esm --dts --watch --target=esnext --external=react --external=next",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts*"
  },
  "keywords": [
    "mdx",
    "widgets",
    "react",
    "components",
    "interactive"
  ],
  "dependencies": {
    "@mdxui/types": "workspace:*",
    "@mdxui/shared": "workspace:*",
    "cmdk": "^0.2.0",
    "@tiptap/react": "^2.0.0",
    "@tiptap/starter-kit": "^2.0.0",
    "@tiptap/extension-link": "^2.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "next": "^14.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
